#This file contains the layout/design for the buy screen

<Popups>:
    Label:
        text: "Enter bid amount:"
        size_hint: 0.2, 0.2
        pos_hint: {"x":.41, "y":0.75}
    TextInput:
        size_hint_y: None
        hint_text: "00.00"
        height: 30
        size_hint_x: None
        width: 200
        pos_hint: {'x':.13, 'y':.4}
        multiline: False
        id: bid_input
    Button:
        text: "Submit"
        # set size of the button
        size_hint: .5, 0.2
        # set position of the button
        pos_hint: {"x":.25, "y":0.1}
        on_release:
            app.submit_bid(bid_input.text)
            app.update(self)
