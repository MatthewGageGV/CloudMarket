# This file contains the layout/design for the sell screen

<SellScreen>:
    FloatLayout:
        Image:
            source: "imgs/Background.png"
            allow_strech: True
            keep_ratio: False
            pos_hint: {"bottom": 1, "left": 1}
            size_hint: 1, 1.243
            id: logo
        ImageButton:
            pos_hint: {'x':.85, 'y':.04}
            size_hint: .1, .075
            source: "imgs/HomeButton.png"
            on_press:
                self.source = "imgs/HomeButtonDark.png"
            on_release:
                app.change_screen("home_screen")
                self.source = "imgs/HomeButton.png"
        ImageButton:
            pos_hint: {'x':.3, 'y':.04}
            size_hint: .4, .075
            source: "imgs/SubmitButton.png"
            on_press:
                self.source = "imgs/SubmitButtonDark.png"
            on_release:
                self.source = "imgs/SubmitButton.png"
                app.submit_item(name_input.text, time_input.text, min_input.text, buy_input.text)
        Label:
            pos_hint: {'x':.452, 'y':.9}
            size_hint: .1, .075
            text: "Item Information"
        Label:
            pos_hint: {'x':.34, 'y':.791}
            size_hint: .102, .075
            text: "Name:"
        TextInput:
            hint_text: 'Enter Name'
            size_hint: .18,.044
            background_normal: "imgs/InputBackground.png"
            background_active: "imgs/InputBackground.png"
            pos_hint: {'x':.45, 'y':.8055}
            multiline: False
            id: name_input
        Label:
            pos_hint: {'x':.34, 'y':.691}
            size_hint: .1, .075
            text: "Minimum Bid:"
        TextInput:
            hint_text: 'Enter Minimum Bid'
            size_hint: .18,.044
            background_normal: "imgs/InputBackground.png"
            background_active: "imgs/InputBackground.png"
            pos_hint: {'x':.45, 'y':.705}
            multiline: False
            id: min_input
        Label:
            pos_hint: {'x':.34, 'y':.591}
            size_hint: .1, .075
            text: "Buy Now Price:"
        TextInput:
            hint_text: 'Enter Instant Buy Price'
            size_hint: .18,.044
            background_normal: "imgs/InputBackground.png"
            background_active: "imgs/InputBackground.png"
            pos_hint: {'x':.45, 'y':.6045}
            multiline: False
            id: buy_input
        Label:
            pos_hint: {'x':.34, 'y':.491}
            size_hint: .1, .075
            text: "Set Time:"
        TextInput:
            hint_text: 'Enter Bid Time Length'
            size_hint: .18,.044
            background_normal: "imgs/InputBackground.png"
            background_active: "imgs/InputBackground.png"
            pos_hint: {'x':.45, 'y':.504}
            multiline: False
            id: time_input
        Label:
            pos_hint: {'x':.34, 'y':.391}
            size_hint: .1, .075
            text: "Category:"
        ImageButton:
            source: "imgs/CategoryButton.png"
            size_hint: None, None
            height: '30dp'
            width: '180dp'
            pos_hint: {'x':.45, 'y':.4}
            allow_stretch: True
            on_release:
                dropdown.open(self)
            id: select_category
            DropDown:
                id: dropdown
                ImageButton:
                    source: "imgs/ClothingButton.png"      
                    size_hint: None, None
                    height: '30dp'
                    width: '180dp'
                    allow_stretch: True
                    on_release:
                        dropdown.select('Option 1')
                        select_category.source = "imgs/ClothingButton.png"
                ImageButton:
                    source: "imgs/CollectiblesButton.png"
                    size_hint: None, None
                    height: '30dp'
                    width: '180dp'
                    allow_stretch: True
                    on_release:
                        dropdown.select('Option 2')
                        select_category.source = "imgs/CollectiblesButton.png"
                ImageButton:
                    source: "imgs/ElectronicsButton.png"
                    size_hint: None, None
                    height: '30dp'
                    width: '180dp'
                    allow_stretch: True    
                    on_release:
                        dropdown.select('Option 3')
                        select_category.source = "imgs/ElectronicsButton.png"